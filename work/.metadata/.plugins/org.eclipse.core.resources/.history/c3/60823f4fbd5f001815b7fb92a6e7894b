package com.class2;

class Circle{
	
	private int r; // Á¤º¸ÀÇ Àº´Ð(Ä¸½¶È­)
	private final double pi = 3.14;
	
	public void setData(int r){
		this.r = r;
	}
	
	public double area(){
		return r*r*pi;
	}
	
	public void write(double a){
		System.out.println("¹ÝÁö¸§ : " + r);
		System.out.println("³ÐÀÌ : " + a);
	}
	
}

public class Test1 {

	public static void main(String[] args) {

		Circle ob1 = new Circle();
		
		ob1.setData(10);
		double r = ob1.area();
		ob1.write(r);
		
	}

}
